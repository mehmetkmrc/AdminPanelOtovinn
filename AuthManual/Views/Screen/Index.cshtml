@model IEnumerable<Screen>
@{
    Layout = "_HomePageLayout";
}

<div class="image-container">
    @foreach (var screen in Model)
    {
        @if (screen.ImageData != null)
        {
            <img src="data:image;base64,@Convert.ToBase64String(screen.ImageData)" style="max-width: 300px" class="d-block mx-auto" />
        }
    }
</div>
<br>
<div class="card-footer text-center">
    @foreach (var screen in Model)
    {
        @screen.Name
    }
</div>
